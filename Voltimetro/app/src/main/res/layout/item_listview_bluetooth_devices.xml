<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="@string/example_string"
        android:id="@+id/title"
        android:fontFamily="@font/proxima_nova_condensed_bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textSize="16sp"
        android:text="@string/itemlist_mac_placeholder"
        android:id="@+id/mac_address_placeholder"
        android:fontFamily="@font/proxima_nova_condensed_semibold"
        android:layout_alignParentStart="true"  />

    <TextView
        android:id="@+id/mac_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/mac_address_placeholder"
        android:fontFamily="@font/proxima_nova_condensed_semibold"
        android:text="@string/example_string"
        android:textSize="16sp" />
</RelativeLayout>

